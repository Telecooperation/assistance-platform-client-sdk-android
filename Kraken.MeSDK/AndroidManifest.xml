<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tudarmstadt.informatik.tk.kraken.sdk"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <!-- for GCM, only for devices lower that 4.0.4 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <permission
        android:name="de.tudarmstadt.informatik.tk.kraken.android.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="de.tudarmstadt.informatik.tk.kraken.android.permission.C2D_MESSAGE" />

    <permission
        android:name="de.tudarmstadt.informatik.tk.kraken.dnd2.permission.KRAKEN_LOGIN"
        android:protectionLevel="signature" />

    <application android:allowBackup="false">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.ui.activities.WelcomeActivity" />

        <activity
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.ui.activities.SettingsActivity"
            android:label="@string/settings" />

        <activity
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.ui.activities.sensors.SensorsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.ui.activities.accounts.AccountsActivity"
            android:label="@string/login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="de.tudarmstadt.informatik.tk.kraken.android.login.twitter.Twitter_oAuth"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>

        <activity android:name="com.facebook.LoginActivity" />

        <service android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.services.KrakenService" />

        <service
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.services.KrakenAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/serviceconfig" />
        </service>

        <service
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.sensors.triggered.ActivitySensorService"
            android:exported="false"
            android:label="ActivitySensorService" />

        <!-- Declaring broadcast receiver for BOOT_COMPLETED event -->
        <receiver
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.receivers.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.KrakenLoginReceiver"
            android:enabled="true"
            android:permission="de.tudarmstadt.informatik.tk.kraken.dnd2.permission.KRAKEN_LOGIN">
            <intent-filter>
                <action android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.action.LOGIN" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.receivers.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="de.tudarmstadt.informatik.tk.kraken.android" />
            </intent-filter>
        </receiver>

        <service android:name="de.tudarmstadt.informatik.tk.kraken.android.sdk.services.GcmIntentService" />

    </application>

</manifest>
